{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "2.2.0",
  "description": "__MSG_extensionDescription__",
  "permissions": ["storage", "tabs"],
  "icons": { "64": "icon.png" },
  "background": {
    "scripts": [
      "lib/state.js",
      "lib/autoclose.js",
      "lib/browseraction.js",
      "background.js"
    ]
  },
  "options_ui": { "page": "settings/index.html" },
  "action": {
    "default_popup": "panel/index.html",
    "default_title": "__MSG_buttonTooltip__",
    "default_icon": { "64": "icon.png" }
  },
  "default_locale": "en_US",
  "browser_specific_settings": {
    "gecko": {
      "id": "@dustman.martinohansen",
      "strict_min_version": "109.0"
    },
    "data_collection_permissions": {
      "required": ["none"]
    }
  }
}
